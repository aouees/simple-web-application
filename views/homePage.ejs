<!DOCTYPE html>
<html lang="en">
<head>
    <%-include("partial/header")%>
    <link rel="stylesheet" href="./table.css">
</head>
<body>
    <%-include("partial/nav")%>
    <form style=" display : flex;margin-top: 25px;" action="/homepage" method="get">
        <input style="width: 100%;" type="text" id="statement" name="statement">
        <input style="width: 50%;" type="submit" value="Search by Statement">
    </form>
    <form style=" display : flex;margin-top: 25px;" action="/homepage" method="get">
        <input style="width: 100%;" type="text" id="topic" name="topic">
        <input style="width: 50%;" type="submit" value="Search by Topic">
    </form>
    <table>
        <thead>
            <th style="width: 60%;" >
                    Statement
                </th>
                    <th style="width: 15%;">
                        Topic
                    </th>    
        </thead>
        <tbody>
            <%statements.forEach((ele)=>{%>
                <%-include("partial/row",{s:ele,all:true})%>
            <%})%>    
        </tbody>
    </table>
</body>
</html>