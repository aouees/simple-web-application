<!DOCTYPE html>
<html lang="en">
<head>
    <%-include("partial/header")%>
    <link rel="stylesheet" href="./table.css">

</head>
<body>
    <%-include("partial/nav")%>
    <form   action="/addStatement" method="post">
        <table >
            <thead>
                <th style="width: 60%;" >
                        <label for="statement">Statement</label>      
                    </th>
                        <th style="width: 15%;">

                            <label for="topic">topic</label>
                        </th>
                        <th style="width: 15%;" >
                            action
                        </th>                
            </thead>
            <tbody>
                <tr>
                    <td >
                        <input style="width: 90%;"  type="text" id="statement" name="statement">
                    </td>
                    <td >
                        <input style="width: 90%;" type="text" id="topic" name="topic">     
                    </td>
                    <td >
                        <input style="width: 90%;" type="submit" value="Add">
                    </td>
                </tr>
            </tbody>
        </table>
    </form>
    <table >
        <tbody>
            <%statements.forEach((ele)=>{%>
                <%-include("partial/row",{s:ele,all:false})%>
            <%})%>    
        </tbody>
    </table>
</body>
</html>